.scroll {
    height: auto;
    width: 100%;
    position: relative;
}

.scroll-con {
    height: auto;
    width: 100%;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 0;
}

.index {
    z-index: 1;
}

.scroll {
    margin-top: 15rpx;
}

.scroll-con-details {
    height: 300rpx;
    width: 100%;
    padding: 0 25rpx;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    box-sizing: border-box;
    background: #fff;
    border-bottom: 1rpx solid #f2f2f2;
}

.img {
    height: 250rpx;
    width: 250rpx;
}

.img image {
    height: 250rpx;
    width: 250rpx;
}

.cons {
    height: 300rpx;
    width: 485rpx;
    margin-left: 15rpx;
    box-sizing: border-box;
    padding: 25rpx 0;
    display: flex;
    flex-direction: column;
}

.cons text {
    height: 70rpx;
    width: 100%;
    padding-left: 15rpx;
    font-size: 25rpx;
    line-height: 35rpx;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.details {
    height: auto;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-top: 15rpx;
}

.details view {
    height: auto;
    width: 100%;
    color: #999;
    padding-left: 15rpx;
    font-size: 25rpx;
    display: inline-block;
}

.details text {
    height: 40rpx;
    width: 100%;
    color: #f40000;
    font-weight: 500;
}

#luckcode {
    margin-top: 15rpx;
    font-size: 25rpx;
    letter-spacing: 8rpx;
    color: #000;
}
