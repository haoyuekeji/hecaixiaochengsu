<!--address.wxml-->
<view class="container">

    <view class="con">
        <text>收货人</text>
        <input type='text' value='{{userName}}'/>
    </view>

    <view class="con">
        <text>联系电话</text>
        <input type='text' value='{{telNumber}}'/>
    </view>
    <view class="con">
        <text>地区</text>
        <picker mode="region" bindchange="bindRegionChange" value="{{region}}">
            <view class="picker">
                {{region[0]}} {{region[1]}} {{region[2]}}
            </view>
        </picker>

    </view>
    <view class="con">
        <text>详细地址</text>
        <input type='text' value='{{detailInfo}}'/>
    </view>
</view>